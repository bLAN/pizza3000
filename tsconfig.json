{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["es2016", "dom"],
    "typeRoots": ["./node_modules/@types"],
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "declaration": false,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "baseUrl": ".",
    "strict": true
  },
  "exclude": ["node_modules", "tests"]
}
